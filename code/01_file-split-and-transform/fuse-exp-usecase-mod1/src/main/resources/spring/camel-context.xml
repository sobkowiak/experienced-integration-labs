<!-- Configures the Camel Context-->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="_camelContext1" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="properties" location="fabric8/route.properties"/>
        <!--
             Transformation Endpoint doing csv2java conversion
             Step 1 : csv record is converted java using camel bindy
             Step 2 : Dozer transformation of Customer to Account
             Step 3 : Java to Json conversion using json jackson
        -->
        <endpoint id="csv2json" uri="dozer:csv2json?sourceModel=org.acme.Customer&amp;targetModel=org.globex.Account&amp;marshalId=transform-json&amp;mappingFile=transformation.xml"/>
        <dataFormats>
            <bindy classType="org.acme.Customer" id="csv" type="Csv"/>
            <json id="transform-json" library="Jackson"/>
        </dataFormats>
        <route id="_route1">
            <from id="_from1" uri="file:src/data/inbox?fileName=customers.csv&amp;noop=true"/>
            <log id="_log1" message="${body}"/>
            <split id="_split1">
                <tokenize token="\n"/>
                <to id="_to2" uri="direct:splitted"/>
            </split>
        </route>
        <route id="_route2">
            <from id="_from2" uri="direct:splitted"/>
            <unmarshal id="_unmarshal1" ref="csv"/>
            <onException id="_onException1">
                <exception>java.lang.IllegalArgumentException</exception>
                <handled>
                    <constant>true</constant>
                </handled>
                <log id="_log3" message="${body}"/>
                <to id="_to1" uri="file:src/data/error?fileName=csv-record-${date:now:yyyyMMdd}.txt"/>
            </onException>
            <to id="_to3" uri="ref:csv2json"/>
            <log id="_log2" message="${body}"/>
            <to id="_to4" uri="file:src/data/outbox?fileName=account-${property.CamelSplitIndex}.json"/>
        </route>
        <route id="_route3">
            <from id="_from22" uri="direct:csv2json-test-input"/>
            <unmarshal id="_unmarshal21" ref="csv"/>
            <onException id="_onException21">
                <exception>java.lang.IllegalArgumentException</exception>
                <handled>
                    <constant>true</constant>
                </handled>
                <log id="_log23" message="${body}"/>
                <to id="_to21" uri="file:src/data/error?fileName=csv-record-${date:now:yyyyMMdd}.txt"/>
            </onException>
            <to id="_to23" uri="ref:csv2json"/>
            <log id="_log22" message="${body}"/>
            <to id="_to5" uri="mock:csv2json-test-output"/>
        </route>
    </camelContext>
</beans>
